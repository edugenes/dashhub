{
  "name": "cryptomininghub",
  "version": "1.0.0",
  "description": "Plataforma completa para mineração de criptomoedas, trading e análise blockchain",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:e2e": "cd tests && npm run test:e2e",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../mobile && npm install && cd ../smart-contracts && npm install",
    "clean": "npm run clean:frontend && npm run clean:backend && npm run clean:mobile",
    "clean:frontend": "cd frontend && rm -rf node_modules .next",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "clean:mobile": "cd mobile && rm -rf node_modules",
    "docker:up": "docker-compose up --build -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "docker:start": "powershell -ExecutionPolicy Bypass -File ./scripts/start-docker.ps1",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write .",
    "type-check": "npm run type-check:frontend && npm run type-check:backend",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:backend": "cd backend && npm run type-check"
  },
  "keywords": [
    "cryptocurrency",
    "mining",
    "blockchain",
    "dashboard",
    "trading",
    "monitoring",
    "web3",
    "defi"
  ],
  "author": "CryptoMiningHub Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/CryptoMiningHub.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/CryptoMiningHub/issues"
  },
  "homepage": "https://github.com/seu-usuario/CryptoMiningHub#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "frontend",
    "backend",
    "mobile",
    "smart-contracts"
  ]
}
