# ===========================================
# CRYPTOMININGHUB - CONFIGURAÇÕES DE AMBIENTE
# ===========================================

# ===========================================
# BANCO DE DADOS
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/cryptomininghub
REDIS_URL=redis://localhost:6379

# ===========================================
# AUTENTICAÇÃO
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
REFRESH_TOKEN_EXPIRES_IN=30d

# ===========================================
# BLOCKCHAIN - RPC URLs
# ===========================================
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_TESTNET_RPC_URL=https://goerli.infura.io/v3/your-project-id
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_TESTNET_RPC_URL=https://rpc-mumbai.maticvigil.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545

# ===========================================
# BLOCKCHAIN - CONTRATOS
# ===========================================
MINING_POOL_CONTRACT_ADDRESS=0x...
STAKING_CONTRACT_ADDRESS=0x...
REWARDS_CONTRACT_ADDRESS=0x...

# ===========================================
# APIS EXTERNAS
# ===========================================
COINGECKO_API_KEY=your-coingecko-api-key
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key
POLYGONSCAN_API_KEY=your-polygonscan-api-key
BSCSCAN_API_KEY=your-bscscan-api-key

# ===========================================
# MINERAÇÃO
# ===========================================
MINING_POOL_URL=your-mining-pool-url
MINING_POOL_API_KEY=your-mining-pool-api-key
MINING_POOL_USERNAME=your-mining-pool-username
MINING_POOL_PASSWORD=your-mining-pool-password

# ===========================================
# NOTIFICAÇÕES
# ===========================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
SENDGRID_API_KEY=your-sendgrid-api-key

# ===========================================
# CLOUD E STORAGE
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket
CLOUDFLARE_API_TOKEN=your-cloudflare-token

# ===========================================
# MONITORAMENTO
# ===========================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# ===========================================
# DESENVOLVIMENTO
# ===========================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
MOBILE_URL=http://localhost:19006

# ===========================================
# PRODUÇÃO
# ===========================================
# NODE_ENV=production
# PORT=3000
# FRONTEND_URL=https://cryptomininghub.com
# BACKEND_URL=https://api.cryptomininghub.com
# MOBILE_URL=https://mobile.cryptomininghub.com

# ===========================================
# SEGURANÇA
# ===========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
HELMET_CSP_ENABLED=true

# ===========================================
# FEATURES FLAGS
# ===========================================
ENABLE_MINING_MONITORING=true
ENABLE_CRYPTO_TRADING=true
ENABLE_BLOCKCHAIN_INTEGRATION=true
ENABLE_MOBILE_APP=true
ENABLE_AI_FEATURES=false
ENABLE_SOCIAL_FEATURES=false

# ===========================================
# BACKUP E RECOVERY
# ===========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# ===========================================
# TESTES
# ===========================================
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/cryptomininghub_test
TEST_REDIS_URL=redis://localhost:6379/1
CYPRESS_BASE_URL=http://localhost:3000
